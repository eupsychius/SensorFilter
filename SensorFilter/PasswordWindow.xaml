<Window x:Class="SensorFilter.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SensorFilter"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Введите пароль" Height="80" Width="280" ResizeMode="NoResize" Icon="/icon.ico">
    <Grid>
        <PasswordBox 
            x:Name="PwordBox" Margin="5"  Height="26" Width="250" FontSize="18"
            HorizontalAlignment="Center" VerticalAlignment="Center" KeyDown="PwordBox_KeyDown" />
    </Grid>
</Window>
